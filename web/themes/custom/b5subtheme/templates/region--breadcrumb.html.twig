{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{% if content %}
  <div class="d-flex justify-content-end" {{ attributes.addClass(classes) }}>
    <div class="me-auto d-none d-md-block">{{ drupal_block('system_breadcrumb_block') }}</div>
    <div>{{ drupal_block('system_menu_block:account') }}</div>
  </div>
{% endif %}
